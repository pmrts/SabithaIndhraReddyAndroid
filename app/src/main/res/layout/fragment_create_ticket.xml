<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:local="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/bottom_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:focusableInTouchMode="true"
                android:descendantFocusability="beforeDescendants">

                <EditText
                    android:visibility="gone"
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="15dp"
                    android:hint="@string/enteryourpincode"
                    android:textColorHint="@color/gray_medium"
                    android:inputType="number"
                    android:maxLength="6"
                    android:background="@drawable/bg_corner_gray"
                    android:paddingLeft="@dimen/dp_8"
                    android:textSize="@dimen/dp_12"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/gray_lite"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:background="@drawable/bg_corner_gray">

                    <EditText
                        android:background="@null"
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Name"
                        android:textColorHint="@color/gray_medium"
                        android:inputType="text"
                        android:textSize="@dimen/dp_12"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:background="@drawable/bg_corner_gray">

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:src="@drawable/ic_mandatory_icon"
                        android:layout_marginRight="@dimen/dp_25"/>

                    <TextView
                        android:id="@+id/tv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="Gender"
                        android:textColor="@color/gray_medium" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal"
                        android:id="@+id/radio_sex">

                        <RadioButton
                            android:id="@+id/radio_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:buttonTint="@color/pink_color"
                            android:text="Male"
                            android:textColor="@color/gray_medium"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="Female"
                            android:textColor="@color/gray_medium"
                            android:buttonTint="@color/pink_color"
                            android:id="@+id/radio_female"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="Others"
                            android:textColor="@color/gray_medium"
                            android:buttonTint="@color/pink_color"
                            android:id="@+id/radio_others"/>
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:background="@drawable/bg_corner_gray">

                    <EditText
                        android:background="@null"
                        android:id="@+id/address_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Address"
                        android:textColorHint="@color/gray_medium"
                        android:inputType="textPostalAddress"
                        android:textSize="@dimen/dp_12"
                        />
                    <ImageView
                        android:visibility="gone"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:src="@drawable/ic_mandatory_icon"
                        android:layout_marginRight="@dimen/dp_25"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text=" Select Location"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="@dimen/dp_15">

                        <Spinner
                            android:id="@+id/spinner1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:background="@drawable/bg_corner_red"
                            android:hint="@string/selectLocation"
                            android:textColor="@color/gray_medium"
                            android:textSize="@dimen/dp_14" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/ic_move_icon" />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/gray_lite"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"

                        ></View>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="Concern type"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="@dimen/dp_15"
                        android:visibility="visible">

                        <Spinner
                            android:id="@+id/spinner2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:fontFamily="sans-serif"
                            android:background="@drawable/bg_corner_red"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:hint="@string/SelectyourConcernType"
                            android:textColor="@color/gray_medium"
                            android:textSize="@dimen/dp_14"
                            android:visibility="visible"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="@dimen/dp_5"
                            android:src="@drawable/ic_move_icon" />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/gray_lite"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"

                        ></View>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_corner_gray"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="Rural/Urban"
                        android:textColor="@color/gray_medium" />
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal"
                        android:id="@+id/radio_religion">

                        <RadioButton
                            android:id="@+id/radio_rural"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:buttonTint="@color/colorPrimary"
                            android:text="Rural"
                            android:textColor="@color/gray_medium"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:text="Urban"
                            android:textColor="@color/gray_medium"
                            android:buttonTint="@color/colorPrimary"
                            android:id="@+id/radio_urban"/>
                    </RadioGroup>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:background="@drawable/bg_corner_gray">

                    <EditText
                        android:background="@null"
                        android:id="@+id/mobile_no"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Mobile No"
                        android:textColorHint="@color/gray_medium"
                        android:inputType="number"
                        android:textSize="@dimen/dp_12"
                        />
                    <ImageView
                        android:visibility="gone"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:src="@drawable/ic_mandatory_icon"
                        android:layout_marginRight="@dimen/dp_25"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:background="@drawable/bg_corner_gray">

                    <EditText
                        android:background="@null"
                        android:id="@+id/email_no"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Email ID"
                        android:textColorHint="@color/gray_medium"
                        android:inputType="textEmailAddress"
                        android:textSize="@dimen/dp_12"
                        />
                    <ImageView
                        android:visibility="gone"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:src="@drawable/ic_mandatory_icon"
                        android:layout_marginRight="@dimen/dp_25"/>
                </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                    android:visibility="gone">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Are you senior citizen?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_14" />
               <Switch
                   android:id="@+id/citizen_switch"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="right"
                   android:gravity="right"/>
            </LinearLayout>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:id="@+id/radio_ans"
                    android:visibility="gone">

                    <RadioButton
                        android:id="@+id/radio_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:buttonTint="@color/colorPrimary"
                        android:text="Yes"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:text="No"
                        android:buttonTint="@color/colorPrimary"
                        android:id="@+id/radio_no"/>
                </RadioGroup>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Are you Defferntly abled?"
                        android:textSize="@dimen/dp_14"
                        android:textColor="@color/black" />
                    <Switch
                        android:id="@+id/differntly_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"/>
                </LinearLayout>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:id="@+id/radio_ans2"
                    android:visibility="gone">

                    <RadioButton
                        android:id="@+id/radio_yes1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:buttonTint="@color/colorPrimary"
                        android:text="Yes"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:text="No"
                        android:buttonTint="@color/colorPrimary"
                        android:id="@+id/radio_no1"/>
                </RadioGroup>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do you want to keep the petition Confidential?"
                        android:textSize="@dimen/dp_14"
                        android:textColor="@color/black" />
                    <Switch
                        android:id="@+id/confidential_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"/>
                </LinearLayout>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:id="@+id/radio_ans3"
                    android:visibility="gone">

                    <RadioButton
                        android:id="@+id/radio_yes2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:buttonTint="@color/colorPrimary"
                        android:text="Yes"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:text="No"
                        android:buttonTint="@color/colorPrimary"
                        android:id="@+id/radio_no2"/>
                </RadioGroup>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/bg_corner_gray"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_grievance_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="5dp"
                        android:gravity="start"
                        android:background="@null"
                        android:hint="Grievance Details "
                        android:textColorHint="@color/gray_medium"
                        android:minHeight="@dimen/dp_70"
                        android:paddingTop="@dimen/dp_2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_12" />
                    <ImageView
                        android:visibility="gone"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:src="@drawable/ic_mandatory_icon"
                        android:layout_marginRight="@dimen/dp_25"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/bg_corner_gray"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/action_required"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="5dp"
                        android:gravity="start"
                        android:background="@null"
                        android:hint="Action Required"
                        android:textColorHint="@color/gray_medium"
                        android:minHeight="@dimen/dp_70"
                        android:paddingTop="@dimen/dp_2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_12"
                        android:visibility="gone"/>

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:src="@drawable/ic_mandatory_icon"
                        android:layout_marginRight="@dimen/dp_25"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Attachments"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="@color/black_pure"/>

                <Button
                    android:id="@+id/attachments"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:background="@mipmap/ic_camera"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="bold" />

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:orientation="horizontal">


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="55dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/camera"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/dp_35"
                        android:layout_marginRight="35dp"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/ic_camera"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_14"
                        android:textStyle="bold"
                        android:visibility="gone" />


                </RelativeLayout>

                <Button
                    android:id="@+id/bt_send"
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/bg_editprimary"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/dp_20"

                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <include
        layout="@layout/bottom_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_layout"
        android:visibility="gone">
    </include>
</RelativeLayout>

