<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/volunteer_userName_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColorHint="#333333">
                        <EditText
                            android:id="@+id/volunteer_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_5"
                            android:gravity="center_vertical"
                            android:hint="Name"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="#d1d1d1"
                            android:textSize="@dimen/dp_14" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    >

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/volunteer_email_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColorHint="#333333">
                        <EditText
                            android:id="@+id/volunteer_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_5"
                            android:gravity="center_vertical"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="#d1d1d1"
                            android:textSize="@dimen/dp_14" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/mobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/volunteer_mobile_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColorHint="#333333">
                        <EditText
                            android:id="@+id/volunteer_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_5"
                            android:gravity="center_vertical"
                            android:hint="Mobile"
                            android:inputType="number"
                            android:maxLines="1"
                            android:maxLength="10"
                            android:textColor="@color/black"
                            android:textColorHint="#d1d1d1"
                            android:textSize="@dimen/dp_14" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/volunteer_pincode_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColorHint="#333333">
                        <EditText
                            android:id="@+id/volunteer_pincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_5"
                            android:gravity="center_vertical"
                            android:hint="Pincode"
                            android:inputType="number"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="#d1d1d1"
                            android:textSize="@dimen/dp_14" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="4dp"
                    android:layout_margin="10dp"
                    android:elevation="10dp"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_200"
                        android:background="@drawable/sabitha_img_9"
                        android:scaleType="fitXY"
                        android:id="@+id/blog_image"
                        android:visibility="gone"/>
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:gravity="center_vertical"
                        android:hint="Name"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/dp_8"
                        android:background="@drawable/bg_corner_gray"
                        android:textColor="@color/black_pure"
                        android:textColorHint="@color/gray_lite"
                        android:textSize="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_5"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColorHint="#333333"
                        android:visibility="gone">

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_20"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:background="@drawable/bg_corner_gray">
                    <TextView
                        android:id="@+id/tv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="Gender"
                        android:textColor="@color/gray_medium" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:textColor="@color/red"
                        android:textSize="@dimen/dp_18"/>


                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal"
                        android:id="@+id/radio_sex">

                        <RadioButton
                            android:id="@+id/radio_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:buttonTint="@color/pink_color"
                            android:text="Male"
                            android:textSize="@dimen/dp_12"
                            android:textColor="@color/gray_medium"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:text="Female"
                            android:textSize="@dimen/dp_12"
                            android:textColor="@color/gray_medium"
                            android:buttonTint="@color/pink_color"
                            android:id="@+id/radio_female"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:text="Others"
                            android:textSize="@dimen/dp_12"
                            android:textColor="@color/gray_medium"
                            android:buttonTint="@color/pink_color"
                            android:id="@+id/radio_others"/>
                    </RadioGroup>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_12"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/mobile_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:gravity="center_vertical"
                        android:hint="Mobile Number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="@dimen/dp_8"
                        android:background="@drawable/bg_corner_gray"
                        android:textColor="@color/black_pure"
                        android:textColorHint="@color/gray_lite"
                        android:textSize="@dimen/dp_12" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/mobile_no_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColorHint="#333333"
                        android:visibility="gone">

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_12"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/email_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:gravity="center_vertical"
                        android:hint="Email ID"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/dp_8"
                        android:background="@drawable/bg_corner_gray"
                        android:textColor="@color/black_pure"
                        android:textColorHint="@color/gray_lite"
                        android:textSize="@dimen/dp_12" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/email_id_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColorHint="#333333"
                        android:visibility="gone">

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_12"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:gravity="center_vertical"
                        android:hint="Address"
                        android:inputType="textPostalAddress"
                        android:maxLength="10"
                        android:padding="@dimen/dp_8"
                        android:background="@drawable/bg_corner_gray"
                        android:textColor="@color/black_pure"
                        android:textColorHint="@color/gray_lite"
                        android:textSize="@dimen/dp_12" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/Address_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColorHint="#333333"
                        android:visibility="gone">

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/anySpecificskill"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textStyle="bold"
                    android:textSize="@dimen/dp_14"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/pink_color"
                    android:layout_marginLeft="@dimen/dp_15"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dp_18"/>

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/volunteer_recycler">

                </android.support.v7.widget.RecyclerView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/bg_corner_gray"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="@dimen/dp_5"
                        android:gravity="start"
                        android:background="@null"
                        android:hint="Description"
                        android:textColorHint="@color/gray_medium"
                        android:minHeight="@dimen/dp_70"
                        android:paddingTop="@dimen/dp_2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_12" />
                    <ImageView
                        android:visibility="gone"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:src="@drawable/ic_mandatory_icon"
                        android:layout_marginRight="@dimen/dp_25"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Facebook profile page link"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/dp_12"
                    android:textColor="@color/black_pure"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:textColor="@color/red"
                        android:textSize="@dimen/dp_18"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_12"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/volunteer_facebook_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:gravity="center_vertical"
                        android:hint="Your Facebook profile page link"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:padding="@dimen/dp_8"
                        android:background="@drawable/bg_corner_gray"
                        android:textColor="@color/black_pure"
                        android:textColorHint="@color/gray_lite"
                        android:textSize="@dimen/dp_12" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/volunteer_facebook_profile_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColorHint="#333333"
                        android:visibility="gone">

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/gray_lite"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Twitter Profile Link"
                    android:textSize="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="@color/black_pure"
                    android:layout_marginTop="12dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dp_18"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_12"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/volunteer_twitter_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:gravity="center_vertical"
                        android:hint="Your Twitter Profile Link"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:background="@drawable/bg_corner_gray"
                        android:padding="@dimen/dp_8"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/black_pure"
                        android:textColorHint="@color/gray_lite"
                        android:textSize="@dimen/dp_12" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/volunteer_twitter_profile_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColorHint="#333333"
                        android:visibility="gone">

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/gray_lite"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"

                    ></View>

                <Button
                    android:id="@+id/volunteer_submit"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@drawable/bg_editprimary"
                    android:text="Apply"
                    android:fontFamily="sans-serif"
                    android:textAllCaps="false"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:textColor="@color/white"
                    />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

</LinearLayout>