<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@null"

    >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="0dp"
            android:background="@drawable/bg_gradiant_color">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_8"
                    android:src="@drawable/ic_back_button_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="News"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/dp_18"
                    android:textStyle="bold"
                    android:id="@+id/feeds_title"/>

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:visibility="visible"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frame">
                <android.support.v4.view.ViewPager
                    android:id="@+id/feeds_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_220"
                    android:layout_margin="@dimen/dp_5"
                    android:visibility="visible"/>
                <ImageButton
                    android:id="@+id/left_nav"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:elevation="@dimen/dp_5"
                    android:layout_gravity="center_vertical|left"
                    android:background="@drawable/ic_back_arrow"
                    android:visibility="visible"/>

                <ImageButton
                    android:id="@+id/right_nav"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:elevation="@dimen/dp_5"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/ic_forword_arrow" />
            </FrameLayout>
            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/feed_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_220"
                android:scaleType="centerCrop"
                android:elevation="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/img_placeholder"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_type"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edit_primary_white"
                android:gravity="center"
                android:text="News"
                android:textColor="@color/black" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <ImageView
                android:id="@+id/youtube_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_220"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:layout_margin="@dimen/dp_5"/>

            <RelativeLayout
                android:id="@+id/relativeLayout_over_youtube_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@android:color/transparent"
                android:visibility="gone"
                android:layout_margin="@dimen/dp_5">

                <ImageView
                    android:id="@+id/btnYoutube_player"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/play"
                    />

            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:textSize="@dimen/dp_16"
            android:text=" "
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:id="@+id/title"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout1"
            android:layout_marginTop="@dimen/dp_5">
            <ImageView
                android:visibility="gone"
                android:id="@+id/blog_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@drawable/ic_share_blue"
                />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text=" "
                android:textColor="@color/gray_medium"
                android:textSize="@dimen/dp_12"
                android:layout_marginLeft="8dp"
                android:layout_alignTop="@+id/blog_share"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="3dp"
            android:background="@color/colorAccent" />
        <WebView
            android:id="@+id/textContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="WebViewLayout"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="visible"
            >

        </WebView>
        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:textSize="@dimen/dp_14"
            android:padding="3dp"
            android:layout_marginTop="@dimen/dp_5"
            android:text=""
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:id="@+id/feeds_message"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout"

            android:layout_marginBottom="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source:"
                android:visibility="gone"
                android:textSize="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_8"/>

            <TextView
                android:id="@+id/blog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:fontFamily="sans-serif_medium"
                android:text="Sample"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_14"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="@color/black_pure"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="visible"/>

        </LinearLayout>
</LinearLayout>
</LinearLayout>
