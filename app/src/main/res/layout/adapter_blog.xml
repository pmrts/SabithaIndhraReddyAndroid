<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/feeds_card_view"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="@dimen/dp_5"
    android:elevation="@dimen/dp_2"
    card_view:cardCornerRadius="8dp">

    <RelativeLayout
        android:id="@+id/itemview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_220"
            android:scaleType="centerCrop"
            android:id="@+id/blog_image"
            android:src="@drawable/kiranbedi_img"/>


        <RelativeLayout
            android:id="@+id/relete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#421868">

            <ImageView
                android:id="@+id/blog_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@drawable/ic_share_app_icon"
                android:visibility="gone" />

            <TextView

                android:id="@+id/blog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_2"
                android:fontFamily="sans-serif"
                android:maxLines="2"
                android:text="Had one of the best time of life today"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_12"
                android:visibility="visible" />

            <TextView
                android:id="@+id/blog_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blog_title"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:fontFamily="sans-serif"
                android:text="Sample"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_12" />

            <ImageView
                android:id="@+id/blog_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:fontFamily="sans-serif"
                android:src="@drawable/ic_forword_arrow"
                android:text="Read more..."
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>