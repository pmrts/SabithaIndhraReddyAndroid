<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/bg_gradiant_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/sabitha_img_14"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_8"
        android:visibility="visible"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold"
            android:id="@+id/name"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 9876543210"
            android:textSize="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/white"
            android:id="@+id/mobile"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_12"
            android:text="rameshkumar@gmail.com"
            android:layout_marginTop="@dimen/dp_2"
            android:textColor="@color/white"
            android:id="@+id/emali"
            android:visibility="gone"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:textSize="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textStyle="bold"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_15"
        android:padding="@dimen/dp_5"
        android:visibility="visible">
        <ImageView
            android:id="@+id/image_headder"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/sabithaimg_1"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_5"
            android:visibility="gone"/>

        <TextView
            android:layout_toRightOf="@+id/image_headder"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_setting_icon"
            android:background="@null"
            android:textColor="@color/white"
            android:text="Welcome to,"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:id="@+id/settings"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/dp_16"
            android:textAllCaps="false" />
        <TextView

            android:layout_below="@+id/settings"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_setting_icon"
            android:background="@null"
            android:textColor="@color/white"
            android:text="BonthuRamMohan"
            android:id="@+id/settings1"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/dp_16"
            android:textAllCaps="false"
            />
    </RelativeLayout>
</RelativeLayout>