<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_edit_primary_white"
    android:layout_margin="@dimen/dp_10"
    android:id="@+id/feeds_card_view"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linear">
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="200dp"
         >
        <ImageView
            android:id="@+id/feed_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_news_gray"
            android:gravity="center"
            android:text="News"
            android:elevation="@dimen/dp_8"
            android:textColor="@color/black" />
        <RelativeLayout
            android:id="@+id/relativeLayout_over_youtube_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@android:color/transparent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/btnYoutube_player"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/play" />

        </RelativeLayout>

    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="12dp">
    <TextView
        android:visibility="gone"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/bd_edit_circle"/>
    <TextView
        android:visibility="gone"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/bd_edit_circle"/>
    <TextView
        android:visibility="gone"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/bd_edit_circle"/>
    <TextView
        android:visibility="gone"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/bd_edit_circle"/>
    <TextView
        android:visibility="gone"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/bd_edit_circle"/>
    <TextView
        android:visibility="gone"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/bd_edit_circle"/>

    <TextView
        android:visibility="gone"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/bd_edit_circle"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/dp_12"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/blue" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/open"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:background="@drawable/ic_front_arrow"/>
    </LinearLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            android:gravity="left"
            android:maxLines="2"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/pink_color"
            android:layout_marginRight="@dimen/dp_10"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:text=" "
            android:textColor="@color/gray_medium"
            android:textSize="@dimen/dp_12"
            android:gravity="end"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
           >

        </TextView>
    <ImageView
        android:visibility="visible"
        android:id="@+id/open1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_front_arrow"/>
</RelativeLayout>


</LinearLayout>

</android.support.v7.widget.CardView>
